<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPaneMenuMain" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IHM.MenuMain">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button fx:id="buttonLocal" stylesheets="@style.css" styleClass="button_menu" maxWidth="400.0" mnemonicParsing="true" onAction="#handleLocalGame" prefHeight="60.0" text="Nouvelle partie" VBox.vgrow="ALWAYS" />
            <Button fx:id="buttonChargerPartie" stylesheets="@style.css" styleClass="button_menu" maxWidth="400.0" mnemonicParsing="false" onAction="#handleButtonChargerPartie" prefHeight="60.0" text="Charger une partie" VBox.vgrow="ALWAYS" />
            <Button fx:id="buttonTutorial" stylesheets="@style.css" styleClass="button_menu" disable="true" maxWidth="400.0" mnemonicParsing="false" prefHeight="60.0" text="Didactitiel" VBox.vgrow="ALWAYS" />
            <Button fx:id="buttonOptions" stylesheets="@style.css" styleClass="button_menu" maxWidth="400.0" mnemonicParsing="false" onAction="#handleOptions" prefHeight="60.0" text="Options" VBox.vgrow="ALWAYS" />
            <Button disable="true" mnemonicParsing="false" text="NOT_TO_USE" visible="false" />
            <Button fx:id="buttonQuit" stylesheets="@style.css" styleClass="button_menu" maxWidth="400.0" mnemonicParsing="false" onAction="#handleQuitProgram" prefHeight="60.0" text="Quitter" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="50.0" left="300.0" right="300.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
